<%= form_with model: article do |f| %>
  <div>
    <!--    :title , "new label"-->
    <%= f.label :title %><br>
    <%= f.text_field :title %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= f.label :status %><br>
    <%= f.select :status, Visible::VALID_STATUSES, selected: article.status || "public" %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
